<div class="container">
  <div class="wrapper-form">
    <div class="child-wrapper-container pay-wrapper-container">
      <div class="title-wrapper pay-title-wrapper">
        <span class="title">Оплата</span>
        <span class="description">Ви збираєтесь купити курс.<br>Введіть будь ласка данні для оплати</span>
      </div>
      <%= simple_form_for :card_params, url: course_rate_bought_course_path(@course, @rate), method: "POST", id: "form" do |form| %>
        <div class="course-name" course_id="<%= @course.id %>" rate_id="<%= @rate.id %>">
          <div class="header">
            <span class="oswald-sans-serif600"><%= @rate.title %></span>
          </div>
          <div class="wrapper-courses-lesson">
            <div class="name">
              <span>Пакет:</span>
              <span>Ціна:</span>
            </div>
            <div class="price">
              <span><%= @rate.tariff %></span>
              <span><%= @rate.price %> грн</span>
            </div>
          </div>
        </div>
        <div class="card-number-section">
          <label for="card-number">Номер картки</label><br>
          <div class="icons-wrapper">
            <%= image_tag 'icons/card.svg', alt: "card" %>
          </div>
          <%= form.text_field :card, id: "card-number", maxlength: 16 %>
          <br>
          <span id="card-hint" class="hint"></span>
        </div>
        <div class="wrapper-cvv-and-date">
          <div class="date">
            <div class="icons-wrapper">
              <%= image_tag 'icons/calendar-dates.jpg', alt: "date" %>
            </div>
            <label for="dateOfCard">Термін дії картки</label>
            <%= form.text_field :card_date, id: "dateOfCard" %>
            <span id="date-hint" class="hint"></span>
          </div>
          <div class="cvv">
            <div class="icons-wrapper">
              <%= image_tag 'icons/CVV.svg', alt: "cvv", class: "cvv-image" %>
            </div>
            <label for="cvv">CVV код</label>
            <%= form.password_field :card_cvv, id: "cvv", maxlength: 3 %>
            <span id="cvv-hint" class="hint"></span>
          </div>
        </div>
<!--        <div class="checkbox-container">-->
<!--          <label class="checkbox-label">-->
            <%#= form.check_box :terms_and_conditions, id: 'check', class:"checkbox-custom rectangular" %>
<!--            <span class="checkbox-custom rectangular"></span>-->
<!--          </label>-->
<!--          <div class="input-title" id="check-valid">-->
<!--            <label for="check">Я згоден з <span id="span1">умовами сервісу</span> та <span id="span2">правилами надання послуг</span></label>-->
<!--          </div>-->
<!--        </div>-->
        <%= form.submit "Купити", class: "button", id: "submit" %>
      <% end %>
    </div>
  </div>
</div>
<span class="hidden" hidden><%= alert %></span>
