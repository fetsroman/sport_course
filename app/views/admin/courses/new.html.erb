<div class="wrapper">
  <div class="container-statistics">
    <div class="navigator">
      <%= link_to admin_path, class: "roboto-font" do %>
        Головне меню
        <span></span>
      <% end %>
      <%= link_to admin_courses_path, class: "roboto-font" do %>
        Курси
        <span></span>
      <% end %>
      <%= link_to new_admin_course_path, class: "roboto-font" do %>
        Додати курс
        <span></span>
      <% end %>
    </div>
      <%= simple_form_for(@course, url: admin_courses_path(@course, locale: params[:locale]), method: "POST", html: { class: 'wrapper-added-course' }) do |form| %>
        <div class="main-title">
          <span class="title roboto-font">Загальна інформація</span>
        </div>
        <div class="add_new_course">
          <div class="wrapper-content">
            <span class="roboto-font">Прев’ю зображення курсу</span>
            <br>
            <a>
              <label for="preview" class="custom-file-upload">
                Завантажити
              </label>
              <%= form.file_field :image, class:"roboto-font", id: "preview" %>
            </a>
          </div>
          <div class="wrapper-content">
            <span class="roboto-font">Трейлер курсу</span>
            <br>
            <div>
              <label for="preview" class="custom-file-upload">
                Завантажити
              </label>
              <%= form.file_field :trailer, class:"roboto-font", id: "preview" %>
            </div>
          </div>
          <div class="inputs-wrapper">
            <label for="name" class="roboto-font">Назва курсу</label>
            <%= form.text_field :title, id: "name" %>
            <label for="description" class="roboto-font">Опис</label>
            <%= form.text_area :description, id: "description" %>
          </div>
          <div class="wrapper-content">
            <span class="roboto-font">Зошит (Для пакету VIP)</span>
            <br>
            <div>
              <label for="preview" class="custom-file-upload">
                Завантажити
              </label>
              <%= form.file_field :document, class:"roboto-font", id: "preview" %>
            </div>
          </div>
          <br>
          <div class="button-wrapper">
            <%= form.submit "Зберегти Курс", class:"roboto-font button save" %>
          </div>
        </div>
      <% end %>
  </div>
</div>