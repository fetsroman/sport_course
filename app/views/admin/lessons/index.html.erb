<%= link_to "New lesson", new_admin_course_lesson_path %>
<% if can_download? %>
  <p>
    <strong>Document:</strong>
    <%= link_to "Download", @course.document.url %>
  </p>
<% end %>

<% if can_contact? %>
  <p>
    <strong>Contact trainer</strong>
  </p>
<% end %>


<div class="row">
  <div class="container">
    <div class="col-lg-5">
      <% @course.lessons.each do |lesson| %>
        <div class="card" style="width: 18rem">
          <img class="card-img-top" src="<%= lesson.image.url %>" alt="Card image cap">

          <div class="card-body">
            <h5 class="card-title"><%= lesson.title %> </h5>
            <p class="card-text"><%= simple_format(lesson.description) %></p>

              <%= link_to "Edit Lesson", edit_admin_course_lesson_path(@course, lesson, locale: params[:locale]) %>
          </div>

          <% if can_watch?(lesson) %>
            <%= link_to 'Watch', course_lesson_path(@course, lesson), remote: true %>
          <% end %>
        </div>
      <% end %>
    </div>

<!--    <div class="col-lg-5">-->
<!--      <div id="lesson">-->
        <%#= render 'admin/lessons/lesson', @lesson %>
<!--      </div>-->
<!--    </div>-->
  </div>
</div>