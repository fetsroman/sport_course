<%= simple_form_for(@rate, url: admin_course_rates_path(@course, @rate, locale: params[:locale]), method: "POST") do |form| %>
  <%= form.error_notification %>
  <%= form.error_notification message: form.object.errors[:base].to_sentence if form.object.errors[:base].present? %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :tariff %>
    <%= form.select :tariff, options_for_select(Rate.tariffs.keys.to_a, @rate.tariff),{},{ class:"form-control m-b" } %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
