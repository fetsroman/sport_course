<div class="container login-container">
  <div class="wrapper-form">
    <div class="child-wrapper-container">
      <div class="title-wrapper">
        <span class="title">Увійти <br class="title-br">в&nbsp;акаунт</span>
        <span class="description">Введіть логін та пароль, щоб отримати доступ до придбаних курсів.</span>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), id: "form", remote: true) do |f| %>
        <div class="wrapper-input" id="wrapper-input-email">
          <div class="icons-wrapper">
            <%= image_tag 'icons/mail.svg' %>
          </div>
          <%= f.text_field :email, autofocus: true, placeholder: "Email", id: "email" %>
          <br>
          <span id="email-hint" class="hint"></span>
        </div>
        <div class="wrapper-input" id="wrapper-input-password">
          <div class="icons-wrapper">
            <%= image_tag 'icons/key-25.svg' %>
          </div>
          <%= f.password_field :password, placeholder: "Password", id: "password" %>
          <br>
          <% if devise_mapping.rememberable? %>
            <%= f.label :remember_me, checked: 'checked', hidden: true %>
          <% end %>
        </div>
        <%= f.submit "Увійти", id: "submit", class: "button" %>
        <div class="forgetPassword">
          <span class="openSans-normal">
            Не маєте аккаунта?
            <%= link_to "Створити новий", new_user_registration_path %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
