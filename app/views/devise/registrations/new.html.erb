<div class="container">
  <div class="wrapper-form wrapper-form-registration">
    <div class="child-wrapper-container">
      <div class="title-wrapper">
        <%= alert %>
        <span class="title registration-title">Реєстрація <br class="title-br">акаунта</span>
        <span class="description registration-description">
          Для отримання доступу до кабінету та покупки курсів
          потрібно пройти коротку реєстрацію
        </span>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="wrapper-input" id="wrapper-input-email">
          <div class="icons-wrapper">
            <%= image_tag 'auth/mail.svg' %>
          </div>
          <%= f.email_field :email, id: "email", validate: true %>
          <br>
          <span id="email-hint" class="hint"></span>
        </div>
        <div class="wrapper-input" id="wrapper-input-password">
          <div class="icons-wrapper">
            <%= image_tag 'auth/key-25.svg' %>
          </div>
          <%= f.password_field :password, placeholder: "Password", id: "password" %>
          <br>
          <span id="password-hint" class="hint"></span>
        </div>
        <div class="radio-toolbar">
          <% if I18n.locale == :ru %>
            <%= radio_button_tag :locale, 'ru', checked: true %>
            <%= label_tag :locale_ru, 'Русский' %>
            <%= radio_button_tag :locale, 'uk' %>
            <%= label_tag :locale_uk, 'Українська' %>
          <% elsif I18n.locale == :uk %>
            <%= radio_button_tag :locale, 'ru' %>
            <%= label_tag :locale_ru, 'Русский' %>
            <%= radio_button_tag :locale, 'uk', checked: true  %>
            <%= label_tag :locale_uk, 'Українська'%>
          <% end %>
        </div>

        <%#= f.check_box :terms_and_conditions %>
        <div class="checkbox-container">
          <label class="checkbox-label">
            <%= f.check_box :terms_and_conditions, id: 'check', class:"checkbox-custom rectangular" %>
<!--            <input type="checkbox" id="check">-->
            <span class="checkbox-custom rectangular"></span>
          </label>

          <div class="input-title" id="check-valid">
            <label for="check">Я згоден з <span id="span1">умовами сервісу</span> та <span id="span2">правилами надання послуг</span></label>
          </div>
        </div>
        <%= f.submit "Зареєструватись", class: "button", id: "submit" %>
      <% end %>
    </div>
  </div>
</div>

<% if resource.errors.any? %>
  <%= content_tag "div", '', id: "foobar", data: {foobar: resource.errors.keys} %>
<% end %>
