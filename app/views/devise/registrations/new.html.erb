<div class="container">
  <div class="wrapper-form wrapper-form-registration">
    <div class="child-wrapper-container">
      <div class="title-wrapper">
        <span class="title registration-title"><%= t 'registration.title_html' %></span>
        <span class="description registration-description"><%= t 'registration.description' %></span>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), id: "form", remote: true) do |f| %>
        <div class="wrapper-input">
          <div class="icons-wrapper">
            <%= image_tag 'icons/user.svg' %>
          </div>
          <%= f.text_field :name, placeholder: (t 'registration.placeholder_name'), id: "name" %>
          <br>
          <span id="name-hint" class="hint"></span>
        </div>
        <div class="wrapper-input">
          <div class="icons-wrapper">
            <%= image_tag 'icons/call.svg' %>
          </div>
          <%= f.text_field :phone, placeholder: (t 'registration.placeholder_phone'), id: "phone", maxlength: 16 %>
          <br>
          <span id="phone-hint" class="hint"></span>
        </div>
        <div class="wrapper-input">
          <div class="icons-wrapper">
            <%= image_tag 'icons/mail.svg' %>
          </div>
          <%= f.text_field :email, placeholder: "Email", id: "email", autofocus: true %>
          <br>
          <span id="email-hint" class="hint"></span>
        </div>
        <div class="wrapper-input">
          <div class="icons-wrapper">
            <%= image_tag 'icons/key-25.svg' %>
          </div>
          <%= f.password_field :password, placeholder: (t 'registration.placeholder_password'), id: "password" %>
          <br>
          <span id="password-hint" class="hint"></span>
        </div>
        <div class="radio-toolbar">
          <% if I18n.locale == :ru %>
            <%= radio_button_tag :locale, 'ru', checked: true %>
            <%= label_tag :locale_ru, 'Русский' %>
            <%= radio_button_tag :locale, 'uk' %>
            <%= label_tag :locale_uk, 'Українська' %>
          <% elsif I18n.locale == :uk %>
            <%= radio_button_tag :locale, 'ru' %>
            <%= label_tag :locale_ru, 'Русский' %>
            <%= radio_button_tag :locale, 'uk', checked: true %>
            <%= label_tag :locale_uk, 'Українська' %>
          <% end %>
        </div>
        <div class="checkbox-container">
          <label class="checkbox-label">
            <%= f.check_box :terms_and_conditions, id: "check" %>
            <span class="checkbox-custom rectangular"></span>
          </label>
          <div class="input-title" id="check-valid">
            <label for="check">
              <%= t 'registration.check_valid' %>
              <%= link_to (t 'registration.privacy_policy'), privacy_policy_path, target: "_blank", id: "span1" %>
              <%= t 'registration.and' %>
              <%= link_to (t 'registration.terms_and_conditions'), terms_and_conditions_path, target: "_blank", id: "span2" %>
            </label>
          </div>
        </div>
        <%= f.submit "Зареєструватись", class: "button", id: "submit" %>
        <div class="forgetPassword">
          <span class="openSans-normal">
            <%= t 'registration.have_account' %>
            <%= link_to (t 'registration.button'), new_user_session_path %>
          </span>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<!-- The Modal -->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <p><%= t 'registration.confirm_account' %></p>
  </div>
</div>